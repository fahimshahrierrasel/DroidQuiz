<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.treebricks.quiz.MainActivity">

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Score" />

    <TextView
        android:id="@+id/questionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Question"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <Button
        android:id="@+id/option1"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/questionView"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        android:text="Button" />

    <Button
        android:id="@+id/option2"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_below="@+id/option1"
        android:layout_marginTop="10dp"
        android:text="Button" />

    <Button
        android:id="@+id/option3"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@+id/option2"
        android:layout_marginTop="10dp"
        android:text="Button" />

    <Button
        android:id="@+id/option4"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:text="Button" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/option4"
        android:text="Next"
        android:visibility="gone"/>

    <Button
        android:id="@+id/explainButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Explain"
        android:textColor="#3F51B5"
        android:textAllCaps="false"
        android:visibility="gone" />
</RelativeLayout>
